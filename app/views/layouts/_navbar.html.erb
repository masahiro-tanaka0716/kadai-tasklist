<header>
  <nav>
   <h1>タスクリスト</h1>
    
    <div>
      <ul>
        
        <% if logged_in? %>
         <h2><%= current_user.name %></h2>
          <li><%= link_to 'ログアウトする', logout_path, method: :delete %></li>
        <% else %>
          
          <li><%= link_to 'ユーザー登録する', signup_path %></li>
          <li><%= link_to 'ログインする', login_path %></li>
         
        <% end %>
      </ul>
    </div>
  </nav>
</header>